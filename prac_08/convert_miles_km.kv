BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        TextInput:
            id: input_number
            text: "34"
            size_hint_x: 0.8
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.2
            Button:
                text: "Up"
            Button:
                text: "Down"
    Button:
        text: "Convert m to km"
        on_press: app.handle_convert(input_number.text)
    Label:
        id: output_label
        text: ""
        color: (0.95, 0.95, 0.03, 1)